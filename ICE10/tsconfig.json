{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES6", // Ctrl + space to see all the options available
        "sourceMap": true,
        "removeComments": true,
        "strict": true,
        "noImplicitAny": true, // make sure you add types for everything
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noImplicitReturns": true

    },

    "exclude": ["node_modules"]
}